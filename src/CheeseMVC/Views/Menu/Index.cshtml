@model IEnumerable<CheeseMVC.Models.Menu>

<!--Why import model as Enumerable instead of list??-->

<h1>Menus</h1>

<ul>
    @foreach(var menu in Model)
    {
        <!--'id' of asp-route-id is the parameter that is passed for the get request into ViewMenu (int id) method-->
        <li>
            <a asp-controller="Menu" asp-action="ViewMenu" asp-route-id="@menu.ID">@menu.Name</a>
        </li>

    }
</ul>

<p><a asp-controller="Menu" asp-action="Add">Add Menu</a></p>
